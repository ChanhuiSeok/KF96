<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    android:orientation="vertical"
    tools:context=".ReportFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calendar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="22dp"
                android:paddingBottom="5dp"
                android:letterSpacing="-0.05"
                android:text="📢 미세먼지 홈"
                android:textColor="@color/colorNavy"
                android:textSize="31dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/custom_blank_title"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/cur_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:padding="10dp"
                    android:text="현재 위치를 받아오는 부분"
                    android:letterSpacing="-0.04"
                    android:textColor="@color/colorWhite"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/startService"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="> 기록시작"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorNavy" />

                <Button
                    android:id="@+id/finishService"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="> 종료하기"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/colorGray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="330dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="2dp"
                android:background="@drawable/custom_blank"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:text="초미세먼지" />

                <TextView
                    android:id="@+id/pm25Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorNavySoft"
                    android:layout_marginTop="-10dp"
                    android:padding="10dp"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="330dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="2dp"
                android:background="@drawable/custom_blank"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:text="미세먼지" />

                <TextView
                    android:id="@+id/pm10Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorNavySoft"
                    android:layout_marginTop="-10dp"
                    android:padding="10dp"
                    android:text="TextView" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="330dp"
                android:layout_marginTop="10dp"
                android:elevation="2dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:text="시간대별 미세먼지 정보" />

                <TextView
                    android:id="@+id/time_dustView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorNavySoft"
                    android:layout_marginTop="-10dp"
                    android:padding="10dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/time_dustView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorNavySoft"
                    android:layout_marginTop="-10dp"
                    android:padding="10dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/time_dustView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorNavySoft"
                    android:layout_marginTop="-10dp"
                    android:padding="10dp"
                    android:text="TextView" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>